<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.automonius.Controller.ScenarioBuilderController">
    <children>
        <TableView fx:id="scenarioTable">
            <columns>
                <TableColumn fx:id="stepNameCol" text="Step Name"/>
                <TableColumn fx:id="extrasCol" text="Extras"/>
            </columns>
        </TableView>
        <TextArea fx:id="logArea"/>
        <Button text="Run" onAction="#handleRunScenarioBuilder"/>
        <Button text="Add Step" onAction="#handleAddScenarioStep"/>
        <Button text="Remove Step" onAction="#handleRemoveScenarioStep"/>
    </children>
</AnchorPane>

