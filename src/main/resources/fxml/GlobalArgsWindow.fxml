<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.automonius.Controller.GlobalArgsController"
            prefWidth="600" prefHeight="600">
    <children>
        <!-- Title -->
        <Label text="Global Arguments Manager"
               AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0"
               style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <!-- Table for global args -->
        <TableView fx:id="globalArgsTable"
                   AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="10.0"
                   AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="250.0">
            <columns>
                <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="200"/>
                <TableColumn fx:id="fieldNameColumn" text="Field Name" prefWidth="180"/>
                <TableColumn fx:id="valueColumn" text="Value" prefWidth="200"/>
            </columns>
        </TableView>


        <!-- Buttons -->
        <HBox spacing="10" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0">
            <children>
                <Button text="+" onAction="#handleAddGlobalArg">
                    <tooltip>
                        <Tooltip text="Add a new Global Argument (all fields required)"/>
                    </tooltip>
                </Button>
                <Button text="-" onAction="#handleRemoveGlobalArg">
                    <tooltip>
                        <Tooltip text="Remove the selected Global Argument"/>
                    </tooltip>
                </Button>
                <Button text="Load" onAction="#handleLoadGlobalArgs">
                    <tooltip>
                        <Tooltip text="Reload global arguments from disk"/>
                    </tooltip>
                </Button>
                <Label fx:id="statusLabel" text="Ready"
                       style="-fx-font-style: italic; -fx-text-fill: gray;"/>
            </children>
        </HBox>


    </children>
</AnchorPane>
